@using ZayProject.Areas.Admin.Models.Slide
@model SlideCreateVM

<form method="post" asp-action="Create" asp-controller="Slide">
	<div class="form-group">
		<label asp-for="Title" class="form-label"></label>
		<input asp-for="Title" class="form-control" placeholder="Enter title" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="MiniTitle" class="form-label"></label>
		<input asp-for="MiniTitle" class="form-control" placeholder="Enter mini title" />
		<span asp-validation-for="MiniTitle" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description" class="form-label"></label>
		<input asp-for="Description" class="form-control" placeholder="Enter description" />
	</div>
	<div class="form-group">
		<label asp-for="PhotoPath" class="form-label"></label>
		<input asp-for="PhotoPath" class="form-control" placeholder="Enter Photo Path" />
	</div>
	<button type="submit" class="btn btn-primary">Create</button>
	<a class="btn btn-danger" asp-action="Index" asp-controller="Slide">Back</a>
</form>
