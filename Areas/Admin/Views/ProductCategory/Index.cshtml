@using ZayProject.Areas.Admin.Models.ProductCategory
@model ProductCategoryIndexVM

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Work Categories</h1>
    <a class="btn btn-primary" asp-action="Create" asp-controller="ProductCategory">Create</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Created At</th>
            <th scope="col">Modified At</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productCategory in Model.ProductCategories)
        {
            <tr>
                <td>@productCategory.Name</td>
                <td>@productCategory.CreatedAt.ToString("dd:MM:yyyy HH:mm")</td>
                <td>@productCategory.ModifiedAt</td>
                <td class="text-center d-flex justify-content-center">
                   <a class="btn btn-success mx-2" asp-controller="ProductCategory" asp-action="Update" asp-route-id="@productCategory.Id">Update</a>
                   <form method="post" asp-controller="ProductCategory" asp-action="Delete" asp-route-id="@productCategory.Id">
                       <button type="submit" class="btn btn-danger">Delete</button>
                   </form>
                </td>
            </tr>
        }
    </tbody>
</table>